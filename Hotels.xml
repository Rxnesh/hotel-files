<?xml version="1.0" encoding="UTF-8"?>
<!-- Root element: Contains a list of hotels -->
<Hotels xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Hotels.xsd">

	<!-- Hotel entry: Rating (required), Category (optional) -->
	<Hotel Rating="4.2" Category="Luxury">
		<Name>Westin</Name>
		<!-- Phone numbers (at least one required, multiple allowed) -->
		<Phone>480-968-8885</Phone>
		<Phone>800-937-8461</Phone>
		<!-- Address block with optional NearestAirport attribute -->
		<Address NearestAirport="Sky Harbor">
			<Number>11</Number>
			<Street>E.7th St</Street>
			<City>Tempe</City>
			<State>AZ</State>
			<Zip>85281</Zip>
		</Address>
	</Hotel>

	<!-- Example with required Rating only -->
	<Hotel Rating="4.5">
		<Name>Hilton</Name>
		<Phone>602-222-2222</Phone>
		<Address>
			<Number>123</Number>
			<Street>Main St</Street>
			<City>Phoenix</City>
			<State>AZ</State>
			<Zip>85001</Zip>
		</Address>
	</Hotel>

	<!-- Example with multiple phones and optional Category -->
	<Hotel Rating="3.8" Category="Budget">
		<Name>Motel 6</Name>
		<Phone>480-333-3333</Phone>
		<Phone>888-666-6666</Phone>
		<Address NearestAirport="Phoenix Sky Harbor">
			<Number>456</Number>
			<Street>Oak St</Street>
			<City>Mesa</City>
			<State>AZ</State>
			<Zip>85202</Zip>
		</Address>
	</Hotel>

	<!-- Add 7 more hotels here following the same structure -->

</Hotels>

